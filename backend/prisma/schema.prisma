generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum MessageRole {
  USER
  ASSISTANT
}

enum AgentStatus {
  SUCCESS
  FAILED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)

  chats     Chat[]
  auditLogs AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chat {
  id        String    @id @default(uuid())
  title     String?
  userId    String
  user      User      @relation(fields: [userId], references: [id])

  messages  Message[]
  agentLogs AgentExecutionLog[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Message {
  id                 String   @id @default(uuid())
  chatId             String
  chat               Chat     @relation(fields: [chatId], references: [id])
  role               MessageRole
  content            String   // raw user message or summary text

  structuredResponse Json?    // full LegalResponse JSON
  confidenceScore    Float?
  conflictsDetected  Boolean?

  isBookmarked       Boolean  @default(false)

  citations          Citation[]

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Citation {
  id        String   @id @default(uuid())
  messageId String
  message   Message  @relation(fields: [messageId], references: [id])

  title     String
  court     String?
  year      Int?
  source    String
  url       String?

  createdAt DateTime @default(now())
}

model AgentExecutionLog {
  id              String      @id @default(uuid())
  chatId          String
  chat            Chat        @relation(fields: [chatId], references: [id])

  agentName       String
  executionTimeMs Int
  status          AgentStatus
  errorMessage    String?
  confidenceScore Float?
  conflictsDetected Boolean?

  createdAt       DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])

  action    String
  metadata  Json?
  createdAt DateTime @default(now())
}

model RepositorySource {
  id        String   @id @default(uuid())
  name      String
  enabled   Boolean  @default(true)
  priority  Int      @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}